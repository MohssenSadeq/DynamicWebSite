@model Magfinalproject.Models.Request_to_edit

@{
    ViewBag.Title = "الصلاحيات / التعديل";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}

<style>
    .row, form {
        width: 100%;
    }
</style>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<hr />
<div class="row">
    @using (Html.BeginForm("Edit_confirm", "Request_to_edit", FormMethod.Post))

    {
        @Html.AntiForgeryToken()

            <dl class="mdi-format-vertical-align-top" style="padding-right:65px;padding-left:65px">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.pic)
                @Html.HiddenFor(model => model.picuni)
                @Html.HiddenFor(model => model.staffid)


                <dd class="col-md-12">

                     @if (Model.states == false)
                     {
                        <h5>. بالظغط على قبول @Html.ActionLink(Model.staff.name, "Details", "staffs", new { id = Model.staff.id }, htmlAttributes: new { @class = "text-info" }) : يمكنك منح مرسل الطلب هذا الصلاحية للتعديل على ملف الموظف <span class="fa fa-info-circle"></span> </h5>

                        <input type="submit" value="قبول" class="btn btn-success" />
                        <hr />
                     }
                     else
                     {
                           <h5 class="text-success">.تم قبول هذا الطلب مسبقا <span class="fa fa-info-circle"></span></h5>
                     }
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.staff.name)
                </dt>

                <dd>
                    @Html.ActionLink(Model.staff.name, "Details", "staffs", new { id = Model.staff.id }, htmlAttributes: new { @class = "text-info" })

                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.dgreeid)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.dgreeid)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.fullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.fullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.phoneNum)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phoneNum)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.date)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.date)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.pic)
                </dt>
                <dd>
                    <img src="~/uploads/@Model.pic" class="thumbnail" style="width:100%; height:480px" />
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.picuni)
                </dt>
                <dd>
                    <img src="~/uploads/@Model.picuni" class="thumbnail" style="width:100%; height:480px" id="im" />
