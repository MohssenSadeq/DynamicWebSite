@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "الصلاحيات / تعديل";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}

<style>
    .row, form {
        width: 100%;
    }
</style>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<h2>التعديل</h2>
<hr />
<div class="row">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name,"الصلاحية", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                                <div class=" col-sm-10">
                    <input type="submit" value="حفظ" class="btn btn-primary" id="save" />
                </div>
            </div>

    }
</div>
          <hr />
   <p>
    @Html.ActionLink("الرجوع إلى القائمة", "Index")
</p>
