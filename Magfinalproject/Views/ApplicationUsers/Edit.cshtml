@model Magfinalproject.Models.ApplicationUser

@{
  
        ViewBag.Title = "المستخدمين / التعديل";
        Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
    }

        <style>
            .row, form {
                width: 100%;
            }
        </style>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/magcontrol">لوحة التحكم</a>
            </li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>

        <h2>التعديل</h2>
        <hr />
        <div class="row">
    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("نوع المستخدم", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownList("UserType", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("إسم المستخدم", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.nikname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nikname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("البريد الإلكتروني", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.Label("كلمة السر", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("رقم التلفون", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("الأسم التعريفي", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
                <div class="form-group">
                    <div class=" col-sm-10">
                        <input type="submit" value="تعديل" class="btn btn-primary" id="save" />
                    </div>
                </div>


    }
</div>
<hr />
<p>
    @Html.ActionLink("الرجوع إلى القائمة", "Index")
</p>